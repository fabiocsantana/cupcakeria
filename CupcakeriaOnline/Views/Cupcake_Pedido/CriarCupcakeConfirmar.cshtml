@model CupcakeriaOnline.Models.Cupcake_Pedido
@{
    ViewBag.Title = "CriarCupcakeConfirmar";
}

<h2 class="site-title">Confirmar Novo Cupcake</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="editor-label" style="margin-top:20px; font-weight:bold; font-size:medium">
            @Html.LabelFor(model => model.fk_idMassa, "Massa")
        </div>
        <div class="editor-field">
            @ViewBag.Massa.descrMassa
            ,
            @ViewBag.Massa.valorUnitMassa R$
            @Html.HiddenFor(model => model.fk_idMassa)
            @Html.ValidationMessageFor(model => model.fk_idMassa)
        </div>

        <div class="editor-label" style="margin-top:20px; font-weight:bold; font-size:medium">
            @Html.LabelFor(model => model.fk_idRecheio, "Recheio")
        </div>
        <div class="editor-field">
            @ViewBag.Recheio.descrRecheio
            ,
            @ViewBag.Recheio.valorUnitRecheio R$
            @Html.HiddenFor(model => model.fk_idRecheio)
            @Html.ValidationMessageFor(model => model.fk_idRecheio)
        </div>

        <div class="editor-label" style="margin-top:20px; font-weight:bold; font-size:medium">
            @Html.LabelFor(model => model.fk_idCobertura, "Cobertura")
        </div>
        <div class="editor-field">
            @ViewBag.Cobertura.descrCobertura
            ,
            @ViewBag.Cobertura.valorUnitCobertura R$
            @Html.HiddenFor(model => model.fk_idCobertura)
            @Html.ValidationMessageFor(model => model.fk_idCobertura)
        </div>

        <div class="editor-label" style="margin-top:20px; font-weight:bold; font-size:medium">
            @Html.LabelFor(model => model.valorCupcake)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.valorCupcake, new { @Value = ViewBag.valorCupcake, @readonly = "true" })
            @Html.ValidationMessageFor(model => model.valorCupcake)
        </div>

        <div class="editor-label" style="margin-top:20px; font-weight:bold; font-size:medium">
            @Html.LabelFor(model => model.qtdeItem)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.qtdeItem, new { @Value = ViewBag.qtdeItem, @readonly = "true" })
            @Html.ValidationMessageFor(model => model.qtdeItem)
        </div>

        <div class="editor-label" style="margin-top:20px; font-weight:bold; font-size:medium">
            @Html.LabelFor(model => model.valorTotalCupcake)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.valorTotalCupcake, new { @Value = ViewBag.valorTotalCupcake, @readonly = "true" })
            @Html.ValidationMessageFor(model => model.valorTotalCupcake)
        </div>


        <p>
            <input type="submit" value="Confirmar" />
        </p>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/validations_pt-br")
}


