@model IEnumerable<CupcakeriaOnline.Models.RecheioModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="site-title">Recheios cadastrados</h2>

<table style="border: 1px black solid;">
    <tr style="border: 1px black solid">
        <th style="padding: 20px; text-align:center;">
            @Html.DisplayNameFor(model => model.descrRecheio)
        </th>
        <th style="padding: 20px; text-align:center;">
            @Html.DisplayNameFor(model => model.valorUnitRecheio)
        </th>

        <th style="padding: 20px; text-align:center;">
            @Html.DisplayNameFor(model => model.dtCadastroRecheio)
        </th>
        <th style="padding: 20px; text-align:center;">
            @Html.DisplayNameFor(model => model.dispRecheio)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="border: 1px black solid">
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.descrRecheio)
            </td>
            <td style="text-align:center">
                R$ @Html.DisplayFor(modelItem => item.valorUnitRecheio)
            </td>

            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.dtCadastroRecheio)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.dispRecheio)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.pk_idRecheio }) |
                @Html.ActionLink("Ver", "Details", new { id = item.pk_idRecheio }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.pk_idRecheio })
            </td>
        </tr>
    }
</table>

<h3>
    @Html.ActionLink("Cadastrar novo reheio", "Create", "Recheio")
</h3>