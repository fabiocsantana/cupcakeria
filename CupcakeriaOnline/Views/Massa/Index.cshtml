@model IEnumerable<CupcakeriaOnline.Models.MassaModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="site-title">Massas cadastradas</h2>

<table style="border: 1px black solid;">
    <tr style="border: 1px black solid">
        <th style="padding: 20px; text-align:center;">
            @Html.DisplayNameFor(model => model.descrMassa)
        </th>
        <th style="padding: 20px; text-align:center;">
            @Html.DisplayNameFor(model => model.valorUnitMassa)
        </th>
        <th style="padding: 20px; text-align:center;">
            @Html.DisplayNameFor(model => model.dtCadastroMassa)
        </th>
        <th style="padding: 20px; text-align:center;">
            @Html.DisplayNameFor(model => model.dispMassa)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="border: 1px black solid">
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.descrMassa)
            </td>
            <td style="text-align:center">
                R$ @Html.DisplayFor(modelItem => item.valorUnitMassa)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.dtCadastroMassa)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.dispMassa)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.pk_idMassa }) |
                @Html.ActionLink("Ver", "Details", new { id = item.pk_idMassa }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.pk_idMassa })
            </td>
        </tr>
    }
</table>

<h3>
    @Html.ActionLink("Cadastrar nova massa", "Create", "Massa")
</h3>