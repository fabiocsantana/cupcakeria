@model CupcakeriaOnline.Models.PedidoModel

@{
    ViewBag.Title = "Detalhes";
}

<h2 class="site-title">Detalhes do pedido</h2>

<fieldset style="margin-top:20px">
    <div class="display-label">
        <h3 style="font-weight:bold;">Nome:</h3>
    </div>
    <div class="display-field">
        @ViewBag.Cliente.nomeCliente
    </div>
    <div class="display-label" style="margin-top:20px">
        <h3 style="font-weight:bold;">Items do Pedido:</h3>
</div>
    <table style="border: 1px black solid;">
        <tr style="border: 1px black solid">
            <th style="padding: 20px; text-align:center;">
                Massa
            </th>
            <th style="padding: 20px; text-align:center;">
                Recheio
            </th>
            <th style="padding: 20px; text-align:center;">
                Cobertura
            </th>
            <th style="padding: 20px; text-align:center;">
                Valor do Cupcake
            </th>
            <th style="padding: 20px; text-align:center;">
                Quantidade
            </th>
            <th style="padding: 20px; text-align:center;">
                Valor Total
            </th>
            <th></th>
        </tr>

        @foreach (var item in ViewBag.Cupcakes)
        {
            <tr style="border: 1px black solid">
                <td style="text-align:center">@item.Massa.descrMassa</td>

                <td style="text-align:center">
                    @item.Recheio.descrRecheio
                </td>
                <td style="text-align:center">
                    @item.Cobertura.descrCobertura
                </td>
                <td style="text-align:center">
                    @item.valorCupcake
                </td>
                <td style="text-align:center">
                    @item.qtdeItem
                </td>
                <td style="text-align:center">
                    @item.valorTotalCupcake
                </td>

            </tr>
        }

    </table>
    <div class="display-label" style="margin-top: 20px;">
        <h3 style="font-weight:bold;">Endereço de Entrega:</h3>
</div>
    <table style="border: 1px black solid;">
        <tr style="border: 1px black solid">
            <th style="padding: 20px; text-align:center;">
                Cep:
            </th>
            <th style="padding: 20px; text-align:center;">
                Logradouro:
            </th>
            <th style="padding: 20px; text-align:center;">
                Número:
            </th>
            <th style="padding: 20px; text-align:center;">
                Complemento:
            </th>
            <th style="padding: 20px; text-align:center;">
                Bairro:
            </th>
            <th style="padding: 20px; text-align:center;">
                Cidade:
            </th>
            <th></th>
        </tr>


        <tr style="border: 1px black solid">
            <td style="text-align:center">
                @ViewBag.Endereco.cepEndereco
            </td>
            <td style="text-align:center">
                @ViewBag.Endereco.logrEndereco
            </td>
            <td style="text-align:center">
                @ViewBag.Endereco.numEndereco
            </td>
            <td style="text-align:center">
                @ViewBag.Endereco.complEndereco
            </td>
            <td style="text-align:center">
                @ViewBag.Endereco.bairroEndereco
            </td>
            <td style="text-align:center">
                @ViewBag.Endereco.cidEndereco
            </td>
            <th></th>
        </tr>
    </table>

    <div class="display-label" style="margin-top:20px;">
        <h3 style="font-weight:bold;">Status:</h3>
</div>
    <div class="display-field">
        @if (Model.statusPedido.Equals(false))
        {
            <div class="display-field">
                Em Andamento
            </div>
        }
        else
        {
            <div class="display-field">
                Fechado
            </div>
        }

    </div>

<!--    <div class="display-label" style="margin-top:20px;">
        <b>Valor Total do Pedido:</b>
    </div>
-->
    <div class="display-field">
        <h3 style="margin-top:20px;">Data do Pedido:</h3>
    </div>

<!--    <div class="display-label">
        @Html.DisplayNameFor(model => model.dataPedido)
    </div>
-->
    <div class="display-field">
        @Html.DisplayFor(model => model.dataPedido)
    </div>
</fieldset>
@if (User.Identity.Name != "Administrador") { 
<p>
    @Html.ActionLink("Voltar para Lista", "PedidosCliente")
</p>}else{
    @Html.ActionLink("Voltar para Pedidos Abertos", "PedidosAbertos") 
    @Html.ActionLink("Voltar para Todos os Pedidos", "Index")
    
    }
