@model IEnumerable<CupcakeriaOnline.Models.PedidoModel>

@{
    ViewBag.Title = "Pedidos";
}

<h2 class="site-title">Todos os Pedidos</h2>

<p>
    <h3>
        @Html.ActionLink("Pedidos Em Aberto", "PedidosAbertos")
    </h3>
</p>

<table style="border: 1px black solid; margin-top:20px">
    <tr style="border: 1px black solid">
        <th style="padding: 20px; text-align:center;">
            <b>Status</b>
        </th>
        <th style="padding: 20px; text-align:center;">
            <b>Valor Total:</b>
        </th>
        <th style="padding: 20px; text-align:center;">
            <b>Data do Pedido</b>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="border: 1px black solid">
            @if (item.statusPedido.Equals(false))
            {
                <td style="padding: 20px; text-align:center;">
                    Em Andamento
                </td>
            }
            else
            {
                <td style="padding: 20px; text-align:center;">
                    Fechado
                </td>
            }
            <td style="padding: 20px; text-align:center;">
               R$ @Html.DisplayFor(modelItem => item.vlrTotalPedido)
            </td>
            <td style="padding: 20px; text-align:center;">
                @Html.DisplayFor(modelItem => item.dataPedido)
            </td>
            <td style="padding: 20px; text-align:center;">
                @Html.ActionLink("Detalhes", "Detalhes", new { id = item.pk_idPedido })
                @Html.ActionLink("Alterar Status", "AlterarStatus", new { id = item.pk_idPedido })

            </td>
        </tr>
    }
</table>
