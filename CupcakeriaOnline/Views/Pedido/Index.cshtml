@model IEnumerable<CupcakeriaOnline.Models.PedidoModel>

@{
    ViewBag.Title = "Pedidos";
}

<h2>Pedidos</h2>

<p>
    @Html.ActionLink("Pedidos Em Aberto", "PedidosAbertos")
</p>
<table>
    <tr>
        <th>
            <b>Status</b>
        </th>
        <th>
            <b>Valor Total:</b>
        </th>
        <th>
            <b>Data do Pedido</b>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @if (item.statusPedido.Equals(false))
            {
                <td>
                    Em Andamento
                </td>
            }
            else
            {
                <td>
                    Fechado
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.vlrTotalPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataPedido)
            </td>
            <td>

                @Html.ActionLink("Detalhes", "Detalhes", new { id = item.pk_idPedido })
                @Html.ActionLink("Alterar Status", "AlterarStatus", new { id = item.pk_idPedido })
                
            </td>
        </tr>
    }

</table>
