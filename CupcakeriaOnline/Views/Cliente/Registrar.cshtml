@model CupcakeriaOnline.Models.ClienteModel

@{
    ViewBag.Title = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Novo usuário</h2><br />

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Não foi possível criar a conta. Verifique os campos")
    
    <div>
        <fieldset>
            <legend>Novo usuário</legend>
            <div class="editor-label">
                @Html.LabelFor(model => model.emailCliente)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.emailCliente)
                @Html.ValidationMessageFor(model => model.emailCliente)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.loginUsuSenha)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.loginUsuSenha)
                @Html.ValidationMessageFor(model => model.loginUsuSenha)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.nomeCliente)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.nomeCliente)
                @Html.ValidationMessageFor(model => model.nomeCliente)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.dataNascCliente)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.dataNascCliente, new { type = "date" })
                @Html.ValidationMessageFor(model => model.dataNascCliente)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.telCliente)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.telCliente)
                @Html.ValidationMessageFor(model => model.telCliente)
            </div>

            <input type="submit" value="Cadastrar" />
        </fieldset>
    </div>
}