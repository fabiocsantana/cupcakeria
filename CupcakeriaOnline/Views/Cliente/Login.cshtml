@model CupcakeriaOnline.Models.ClienteModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="position:relative; margin-top:auto; margin-left: auto;">
    <div id="layout_login" style="width:600px; position:relative;margin-bottom:auto;margin-left:auto">
        <div style="width:300px;position:relative; text-align:center;">
            <img src="~/Images/logo.png" style="width: 100px; height: 172px;" />
            <h1 class="site-title">Cupcakeria Online</h1>
        </div>
        <div style="width:300px;position:relative; float:left;margin-left:20px; margin-top:20px;">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true, "Usuário e/ou senha inválido(s)")

                <div>
                    <fieldset>
                        <div class="editor-label">
                            @Html.LabelFor(model => model.emailCliente)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.emailCliente)
                            @Html.ValidationMessageFor(model => model.emailCliente)
                        </div>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.loginUsuSenha)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.loginUsuSenha)
                            @Html.ValidationMessageFor(model => model.loginUsuSenha)
                        </div>

                        <input type="submit" value="Entrar" />
                        <p>
                            @Html.ActionLink("Registre-se", "Registrar", "Cliente") se ainda não possui uma conta.
                        </p>
                    </fieldset>
                </div>
            }
        </div>
    </div>
</div>