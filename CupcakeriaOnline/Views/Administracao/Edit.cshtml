@model CupcakeriaOnline.Models.AdministracaoModel

@{
    ViewBag.Title = "Edit";
}

<h2 class="site-title">Atualizar senha da administração</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset style="margin-top: 20px">
        @Html.HiddenFor(model => model.pk_idAdministracao)

        <div class="editor-label">
            <div style="font-size: 1.2em; font-weight: 600;">Insira a nova senha</div>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.loginAdmSenha)
            @Html.ValidationMessageFor(model => model.loginAdmSenha)
        </div>

        <p>
            <input type="submit" value="Gravar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
