@model CupcakeriaOnline.Models.CoberturaModel

@{
    ViewBag.Title = "Create";
}

<h2>Criar Cobertura</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CoberturaModel</legend>


        <div class="editor-label">
            @Html.LabelFor(model => model.descrCobertura)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.descrCobertura)
            @Html.ValidationMessageFor(model => model.descrCobertura)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.valorUnitCobertura)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.valorUnitCobertura)
            @Html.ValidationMessageFor(model => model.valorUnitCobertura)   
        </div>


        <!--<div class="editor-label">
            @Html.HiddenFor(model => model.dtCadastroCobertura)
        </div>-->
        <div class="editor-field">
            @Html.HiddenFor(model => model.dtCadastroCobertura, new { @Value = System.DateTime.Now.ToString("MM/dd/yyyy hh:mm:ss tt") })
            @Html.ValidationMessageFor(model => model.dtCadastroCobertura)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.dispCobertura)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.dispCobertura)
            @Html.ValidationMessageFor(model => model.dispCobertura)
        </div>

        <p>
            <input type="submit" value="Criar" />
            <input type="file" value="Upload"  />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar para Coberturas", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
